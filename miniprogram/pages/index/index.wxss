/* 容器 */
.container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  height: 70rpx;
  background: #f6f6f6;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* 分类部分 */
.category-section {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.category-list {
  white-space: nowrap;
  padding: 10rpx 0;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  padding: 12rpx;
  border-radius: 16rpx;
  transition: all 0.3s;
  width: 120rpx;
}

.category-item.active {
  background: rgba(26, 173, 25, 0.1);
  transform: scale(1.05);
}

.category-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 12rpx;
  display: block;
  border-radius: 50%;
  background-color: #f8f8f8;
  padding: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.category-name {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  width: 100%;
  font-weight: 500;
}

.category-item.active .category-name {
  color: #1aad19;
  font-weight: bold;
}

/* 商家列表 */
.shop-list {
  height: calc(100vh - 240rpx);
}

.shop-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.shop-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.shop-desc {
  font-size: 26rpx;
  color: #999;
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.delivery-fee {
  color: #666;
}

.shop-status {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.shop-status.open {
  color: #1aad19;
  background: rgba(26, 173, 25, 0.1);
}

.shop-status.closed {
  color: #999;
  background: #f6f6f6;
}

/* 加载更多 */
.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
} 