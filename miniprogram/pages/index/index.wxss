/* 容器 */
.container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  height: 70rpx;
  background: #f6f6f6;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* 分类部分 */
.category-section {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.category-list {
  white-space: nowrap;
  padding: 10rpx 0;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  padding: 12rpx;
  border-radius: 16rpx;
  transition: all 0.3s;
  width: 120rpx;
}

.category-item.active {
  background: rgba(26, 173, 25, 0.1);
  transform: scale(1.05);
}

.category-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 12rpx;
  display: block;
  border-radius: 50%;
  background-color: #f8f8f8;
  padding: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.category-name {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  width: 100%;
  font-weight: 500;
}

.category-item.active .category-name {
  color: #1aad19;
  font-weight: bold;
}

/* 商家列表 */
.shop-list {
  height: calc(100vh - 240rpx);
}

/* 商家卡片样式优化 */
.shop-card {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.shop-info {
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
}

.shop-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.shop-detail {
  flex: 1;
}

.shop-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.shop-desc {
  font-size: 26rpx;
  color: #999;
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.delivery-fee {
  color: #666;
}

/* 热门评论样式优化 */
.hot-comment {
  margin-top: 10rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
}

.hot-comment-title {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.hot-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.hot-comment-content {
  display: flex;
  align-items: flex-start;
}

.hot-comment .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.comment-right {
  flex: 1;
  overflow: hidden;
}

.comment-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.hot-comment .nickname {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.hot-comment .like-count {
  display: flex;
  align-items: center;
  color: #ff6b6b;
}

.like-count-num {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.like-icon {
  font-size: 28rpx;
}

.hot-comment .content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 查看详情按钮 */
.detail-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  padding: 15rpx 0;
  border-top: 1rpx solid #f2f2f2;
  color: #1aad19;
  font-size: 28rpx;
}

.arrow {
  margin-left: 6rpx;
}

/* 加载更多 */
.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
}

/* 平台选择器 */
.platform-selector {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
}

.platform-selector-mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.platform-selector-content {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    border-radius: 20rpx 20rpx 0 0;
    padding: 30rpx;
}

.platform-selector-title {
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
}

.platform-list {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 0;
}

.platform-item {
    width: 33.33%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 0;
}

.platform-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
}

.platform-name {
    font-size: 28rpx;
    color: #333;
}

.platform-selector-close {
    text-align: center;
    padding: 20rpx 0;
    margin-top: 20rpx;
    border-top: 1rpx solid #eee;
    color: #666;
    font-size: 30rpx;
}

/* 星级评分样式 */
.rating-stars {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  height: 40rpx;
}

.stars-container {
  position: relative;
  display: inline-block;
  height: 40rpx;
  margin-right: 12rpx;
}

.stars-bg, .stars-active {
  display: flex;
}

.stars-bg {
  color: #e0e0e0;
}

.stars-active {
  color: #ffb400;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  white-space: nowrap;
  pointer-events: none; /* 确保可以点击到背景星星 */
}

.icon-star {
  font-size: 40rpx;
  line-height: 40rpx;
  padding: 0 2rpx;
}

.rating-score {
  font-size: 28rpx;
  color: #ffb400;
  font-weight: bold;
} 