.container {
  padding: 0;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 商家信息 */
.shop-header {
  background-color: #fff;
  padding-bottom: 30rpx;
  margin-bottom: 20rpx;
}

.shop-banner {
  width: 100%;
  height: 300rpx;
}

.shop-info {
  padding: 30rpx;
}

.shop-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.favorite-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid #ddd;
  font-size: 24rpx;
  color: #666;
}

.favorite-btn.active {
  color: #ff6b6b;
  border-color: #ff6b6b;
}

.favorite-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.shop-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.shop-meta {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.order-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}

/* 评论区域 */
.comment-section {
  background-color: #fff;
  padding: 0 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.comment-list {
  padding: 0 30rpx;
}

.comment-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
}

.comment-user {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.comment-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.like-btn {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.like-btn.active {
  color: #ff4444;
}

.like-btn .like-icon {
  font-size: 36rpx;
  margin-right: 6rpx;
}

.like-btn.active .like-icon {
  color: #ff4444;
  font-weight: bold;
}

.empty-comment {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 评论表单 */
.comment-form {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
}

.comment-input {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
} 