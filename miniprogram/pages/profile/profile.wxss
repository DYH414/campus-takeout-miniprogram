.container {
  padding: 0;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  background-color: #1aad19;
  padding: 40rpx 30rpx;
  color: #fff;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 4rpx solid #fff;
}

.user-detail {
  margin-left: 30rpx;
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
}

.login-tips {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

.login-btn, .logout-btn {
  margin-top: 30rpx;
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
}

.login-btn {
  background-color: #fff;
  color: #1aad19;
  font-weight: normal;
}

.logout-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-weight: normal;
}

/* 收藏区域 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.favorite-shops {
  background-color: #fff;
}

.shop-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
  position: relative;
}

.shop-content {
  display: flex;
  flex: 1;
}

.shop-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.shop-desc {
  font-size: 26rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cancel-favorite {
  padding: 10rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  align-self: center;
  margin-left: 20rpx;
}

.cancel-text {
  font-size: 24rpx;
  color: #999;
}

.empty-tips {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.login-tips-section {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mini-login-btn {
  margin-top: 30rpx;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background-color: #1aad19;
  color: #fff;
  border-radius: 35rpx;
}